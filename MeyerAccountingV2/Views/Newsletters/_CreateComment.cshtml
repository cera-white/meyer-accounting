@model MeyerAccountingV2.EF.Comment

@using (Html.BeginForm("AddComment", "Newsletters", FormMethod.Post, new { id = "commentForm", @class = "confirm" }))
{
    @Html.AntiForgeryToken()
    HtmlHelper.UnobtrusiveJavaScriptEnabled = false;
    @Html.HiddenFor(model => model.NewsletterId)

    <div class="form-group row">
        <div class="col-md-12">
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Your name" } })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-12">
            @Html.TextAreaFor(model => model.Comment1, new { @class = "form-control", @rows = "6", @placeholder = "Tell us what you think..." })
            @Html.ValidationMessageFor(model => model.Comment1, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row confirm">
        <div class="col-md-12">
            <input type="text" class="form-control" id="confirm" placeholder="What is three plus five?" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="Post Comment" class="btn btn-primary" data-loading-text="Loading...">
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
